---
import "../styles/global.css";
import data from "../config/phone_messages.json";

const phone = data.phone_number;
const just_EPS = encodeURIComponent(data.just_EPS);
const just_ARL = encodeURIComponent(data.just_ARL);
const complete_plan = encodeURIComponent(data.complete_plan);
---

<section
    id="planes"
    class="py-20"
    style="background: linear-gradient(180deg, #FCFBF8 0%, #edf2ff 100%);"
>
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <h2
                class="text-3xl md:text-4xl font-bold text-primary animate-on-scroll"
            >
                Un Plan a la Medida de Tus Necesidades
            </h2>
            <p
                class="text-gray-600 mt-4 max-w-2xl mx-auto animate-on-scroll"
                style="transition-delay: 200ms;"
            >
                Ofrecemos múltiples combinaciones. Elige la cobertura que
                necesitas para tu tranquilidad.
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Plan Card 1: ARL -->
            <div
                class="bg-white rounded-xl shadow-lg p-8 text-center flex flex-col justify-between border-t-4 border-accent animate-on-scroll card-hover-effect"
            >
                <div>
                    <h3 class="text-2xl font-bold text-primary mb-4">
                        Plan Solo ARL
                    </h3>
                    <p class="text-gray-500 text-3xl font-bold mb-4">
                        Desde <span class="text-primary">$85.000</span>
                    </p>
                    <p class="text-gray-600 mb-6">
                        Protección total para trabajadores. Asegura tu
                        tranquilidad ante cualquier riesgo en tu entorno
                        laboral.
                    </p>
                </div>
                <a
                    href={`https://wa.me/${phone}?text=${just_ARL}`}
                    target="_blank"
                    class="mt-4 bg-gray-200 text-primary font-bold py-3 px-8 rounded-full hover:bg-gray-300 transition"
                    >Afiliarme a ARL</a
                >
            </div>
            <!-- Plan Card 2 (Highlighted): EPS -->
            <div
                class="bg-primary text-white rounded-xl shadow-2xl p-8 text-center flex flex-col justify-between transform md:scale-105 animate-on-scroll card-hover-effect"
                style="transition-delay: 200ms;"
            >
                <div>
                    <div
                        class="absolute top-0 right-0 -mt-4 mr-4 bg-accent text-white text-xs font-bold px-3 py-1 rounded-full"
                    >
                        MÁS POPULAR
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-4">
                        Plan Completo
                    </h3>
                    <p class="opacity-80 text-lg font-light mb-4">
                        EPS + ARL + Caja + Pensión
                    </p>
                    <p class="opacity-90 mb-6">
                        La máxima cobertura para ti y tu familia. Accede a todos
                        los beneficios del sistema de seguridad social sin
                        preocupaciones.
                    </p>
                </div>
                <a
                    href={`https://wa.me/${phone}?text=${complete_plan}`}
                    target="_blank"
                    class="mt-4 bg-accent text-white font-bold py-3 px-8 rounded-full hover:bg-accent-dark transition shadow-lg"
                    >Obtener Plan Completo</a
                >
            </div>
            <!-- Plan Card 3: Pensión -->
            <div
                class="bg-white rounded-xl shadow-lg p-8 text-center flex flex-col justify-between border-t-4 border-accent animate-on-scroll card-hover-effect"
                style="transition-delay: 400ms;"
            >
                <div>
                    <h3 class="text-2xl font-bold text-primary mb-4">
                        Plan Solo EPS
                    </h3>
                    <p class="text-gray-500 text-3xl font-bold mb-4">
                        Desde <span class="text-primary">$153.000</span>
                    </p>
                    <p class="text-gray-600 mb-6">
                        Acceso a consultas médicas, cirugías, medicamentos,
                        odontología y pago de incapacidades.
                    </p>
                </div>
                <a
                    href={`https://wa.me/${phone}?text=${just_EPS}`}
                    target="_blank"
                    class="mt-4 bg-gray-200 text-primary font-bold py-3 px-8 rounded-full hover:bg-gray-300 transition"
                    >Afiliarme a EPS</a
                >
            </div>
        </div>
    </div>
</section>
